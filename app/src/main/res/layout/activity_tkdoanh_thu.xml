<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".admin.TKDoanhThuActivity">

    <!-- TextView hiển thị thông tin ngày -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <!-- LinearLayout chứa Button và TextView cho ngày -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:paddingBottom="16dp">

        <!-- Button Chọn ngày bắt đầu -->
        <Button
            android:id="@+id/btnStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ ngày " />

        <!-- TextView hiển thị ngày bắt đầu -->
        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- LinearLayout chứa Button và TextView cho ngày kết thúc -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:paddingBottom="16dp">

        <!-- Button Chọn ngày kết thúc -->
        <Button
            android:id="@+id/btnEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đến ngày" />

        <!-- TextView hiển thị ngày kết thúc -->
        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày kết thúc"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Nút "Doanh thu" -->
    <Button
        android:id="@+id/btnDoanhThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem Doanh Thu"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvDoanhThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doanh thu"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginStart="8dp" />

</LinearLayout>
