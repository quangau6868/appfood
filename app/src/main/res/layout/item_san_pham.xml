<!-- item_product.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6EFE2"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgHinhAnh"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtMaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã SP: 1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMaLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Loại: 1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtTenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm: Đồng hồ Rolex"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtGiaBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá bán: 10000000 VND"
            android:textColor="#FF5722"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTinhtrang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Còn"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="none"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:text="Mô tả: Đồng hồ thông minh với nhiều tính năng hiện đại, phù hợp cho doanh nhân, nhân viên văn phòng hoặc người yêu thích công nghệ. Thiết kế sang trọng, chất liệu bền bỉ cùng khả năng chống nước."
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:contentDescription="Sửa"
                android:focusable="true"
                android:src="@drawable/baseline_edit_24" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:contentDescription="Xóa"
                android:focusable="true"
                android:src="@drawable/baseline_delete_24" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
