<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <!-- Sản phẩm 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivHinhAnh1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_foreground"/>

            <TextView
                android:id="@+id/tvTenSP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm 1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvGiaBan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá bán: 100000"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Sản phẩm 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivHinhAnh2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_foreground"/>

            <TextView
                android:id="@+id/tvTenSP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm 2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvGiaBan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá bán: 200000"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
